{
  "cSpell.files": ["*.md"],
  "postcssSorting.config": {
    "order": [
      "custom-properties",
      "dollar-variables",
      {
        "type" : "at-rule",
        "name" : "include",
      },
      {
        "type"     : "at-rule",
        "name"     : "include",
        "hasBlock" : true
      },
      "declarations",
      {
        "type"     : "rule",
        "selector" : /^&/
      },
      {
        "type"     : "rule",
        "selector" : /^&:\w+$/
      },
      {
        "type"     : "rule",
        "selector" : /^&:   : \w+$/
      },
      {
        "type" : "at-rule",
        "name" : "media"
      }
    ],
    "properties-order": [
      // position
      "position",
      "top",
      "bottom",
      "left",
      "right",
      "z-index",
      "order",
      "float",
      "transform",

      // display
      "content",
      "visibility",
      "opacity",
      "grid-area",
      "display",
      "grid",
      "grid-template",
      "grid-template-columns",
      "grid-auto-columns",
      "grid-template-rows",
      "grid-auto-rows",
      "grid-template-areas",
      "grid-auto-flow",
      "grid-gap",
      "flex-direction",
      "flex-flow",
      "justify-content",
      "align-items",
      "align-content",
      "flex-basis",
      "flex-wrap",
      "flex-grow",
      "flex-shrink",
      "gap",
      "order",
      "vertical-align",

      // box
      "max-height",
      "min-height",
      "height",
      "max-width",
      "min-width",
      "width",
      "margin",
      "margin-top",
      "margin-right",
      "margin-bottom",
      "margin-left",
      "padding",
      "padding-top",
      "padding-right",
      "padding-bottom",
      "padding-left",
      "border",
      "border-top",
      "border-right",
      "border-bottom",
      "border-left",
      "border-radius",
      "border-collapse",
      "outline",
      "outline-width",
      "outline-style",
      "outline-color",
      "outline-offset",

      // color/background
      "color",
      "background",
      "background-image",
      "background-color",
      "border-color",
      "background-position",
      "background-size",
      "background-repeat",
      "background-origin",
      "background-clip",
      "background-attachment",

      // text
      "font",
      "font-family",
      "font-size",
      "font-weight",
      "font-style",
      "font-kerning",
      "font-variant",
      "font-stretch",
      "font-feature-settings",
      "line-height",
      "text-align",
      "text-decoration",
      "text-transform",
      "text-shadow",

      // animation
      "transition",
      "transition-property",
      "transition-duration",
      "transition-timing-function",
      "transition-delay",
      "animation",
      "animation-name",
      "animation-duration",
      "animation-timing-function",
      "animation-delay",
      "animation-iteration-count",
      "animation-direction",
      "animation-fill-mode",
      "animation-play-state",

      // other
      "overflow",
      "overflow-x",
      "overflow-y",
      "cursor",
      "pointer-events",
      "list-style",
      "word-break",
      "word-wrap",
      "text-overflow",
      "white-space",
      "box-sizing",
      "box-shadow",
      "user-select",
    ],
    "unspecified-properties-position" : "bottomAlphabetical"
  }
}
